<p id="notice"><%= notice %></p>

<h1>Listing Lessons</h1>

<table class="table sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.name %></td>
        <td><%= link_to 'Show', lesson ,class:"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) ,class:"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path ,class:"btn btn-primary" %>
