<p id="notice"><%= notice %></p>

<h1>Listing Instructors</h1>

<table class="table sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Id number</th>
      <th>Rank</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.name %></td>
        <td><%= instructor.surname %></td>
        <td><%= instructor.id_number %></td>
        <td><%= instructor.rank %></td>
        <td><%= instructor.email %></td>
        <td><%= instructor.password %></td>
        <td><%= link_to 'Show', instructor,class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_instructor_path(instructor),class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instructor', new_instructor_path,class:"btn btn-primary"%>
