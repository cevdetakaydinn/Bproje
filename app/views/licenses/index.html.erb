<p id="notice"><%= notice %></p>

<h1>Listing Licenses</h1>

<table class="table sortable">
  <thead>
    <tr>
      <th>License Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @licenses.each do |license| %>
      <tr>
        <td><%= license.name %></td>
        <td><%= link_to 'Show', license ,class:"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_license_path(license),class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', license, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New License', new_license_path ,class:"btn btn-primary"%>
